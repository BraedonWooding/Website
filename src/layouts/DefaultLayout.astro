---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

// Component Imports
let title = 'Braedon Wooding';
let description = 'Programming Blog.';
let permalink = 'https://braedonww.me/';
---

<html lang="en" h-full>

<head>
    <link
        rel="alternate"
        type="application/rss+xml"
        title="Your Site's Title"
        href={new URL("feed.xml", Astro.site)}
    />
	<link rel="sitemap" href="/sitemap-index.xml" />
    <BaseHead title={title} description={description} permalink={permalink} />
</head>

<body h-full flex flex-col items-center m-0 overflow-x-hidden style="font-family: 'Open Sans'">
    <Header />
    <main id="main" tabindex={-1} style="flex: 1 0 auto;">
        <slot />
    </main>
    <Footer />
</body>

</html>